<!DOCTYPE html>
<html>
	<head>
		{{ importmap() }}

		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		{% block stylesheets %}{% endblock %}

	</head>
	<body>
		<nav class="navbar navbar-expand-lg bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{path("app_home")}}">Home</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" href="{{ path("search_users") }}">Utilisateurs</a>
						</li>
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a href="{{ path('admin') }}" class="nav-link">Administration</a>
							</li>
						{% endif %}
					</ul>
					<ul class="navbar-nav">
						{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
							<li class="nav-item">
								<a class="nav-link">Connecté :
									{{ app.user.username }}
								</a>
							</li>
							<li class="nav-item">
								<a href="{{ path('security_logout') }}" class="nav-link">Déconnexion</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a href="{{ path('security_login') }}" class="nav-link">Connexion</a>
							</li>
							<li class="nav-item">
								<a href="{{ path('security_registration') }}" class="nav-link">Inscription</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
		<div class="row justify-content-center">
			<div class="col-md-11">
				{% block body %}Placeholder
				{% endblock %}
			</div>
			{% block javascripts %}
				{{ encore_entry_link_tags('app') }}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
			{{ importmap() }}

		</div>
	</body>
</html>
