{% extends "base.html.twig" %}

{% block title %}Log In
{% endblock %}

{% block body %}
	<h1>Log In</h1>

	<form action="{{ path('security_login')}}" method="post">
		<div class="form-group">
			<label for="login_email" class="required">E-mail</label>
			<input id="login_email" placeholder="E-mail" required name="_username" type="text" class="form-control">
		</div>

		<div class="form-group">
			<label for="login_password" class="required">Mot de passe</label>
			<input id="login_password" placeholder="Mot de passe" required name="_password" type="password" class="form-control">
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<div class="form-group">
			<br>
			<button type="submit" class="btn btn-success">Connexion</button>
		</div>
	</form>
{% endblock %}
